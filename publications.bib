	journal = {Autism},
	author = {Brinkert, Jana and Remington, Anna},
	month = may,
	year = {2020},
	pmid = {32476432},
	note = {Publisher: SAGE Publications Ltd},
	keywords = {sensory processing, autism, adults, perception, attention, perceptual capacity},
	pages = {1362361320922640},
