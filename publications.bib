	keywords = {Autism spectrum disorder, Auditory, Cognition, Perception, Development, Music},
	pages = {1--12},
}

@article{todorovaBiologicalMotionPerception2019,
	title = {Biological motion perception in autism spectrum disorder: {A} meta-analysis},
