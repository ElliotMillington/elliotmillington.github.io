	number = {3},
	urldate = {2018-12-31},
	journal = {Psychological Assessment},
	author = {Comer, Jonathan S. and Roy, Amy K. and Furr, Jami M. and Gotimer, Kristin and Beidas, Rinad S. and Dugas, Michel J. and Kendall, Philip C.},
	year = {2009},
